<!DOCTYPE html>
<html lang="en" data-theme="dark">

<head>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-161834016-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'UA-161834016-1');
    </script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description"
        content="Modern geo-location service to lookup IP addresses and their geographic information with precision and style." />
    <meta name="keywords" content="geolocation, IP lookup, location service, geographic data" />

    <title>@ViewData["Title"] - GeoLocation</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navigation.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/all.css" />

    <!-- Ads -->
    <script data-ad-client="ca-pub-7235499647345816" async
        src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml"
        href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='%233b82f6'><path d='M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z'/></svg>">
</head>

<body>
    <!-- Navigation -->
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <!-- Brand -->
                <a class="navbar-brand" id="navBarHome" asp-area="" asp-controller="Home" asp-action="Index">
                    <svg class="icon icon-lg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                        <circle cx="12" cy="10" r="3" />
                    </svg>
                    GeoLocation
                </a>

                <!-- Mobile menu button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation items -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navBarLookupDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="2">
                                    <circle cx="11" cy="11" r="8" />
                                    <path d="m21 21-4.35-4.35" />
                                </svg>
                                Lookup Service
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" id="navBarLookupAddress" asp-area="" asp-controller="Home"
                                        asp-action="LookupAddress">
                                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                            stroke-width="2">
                                            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                                            <circle cx="12" cy="10" r="3" />
                                        </svg>
                                        Lookup Address
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" id="navBarLookupBatch" asp-area="" asp-controller="Home"
                                        asp-action="BatchLookup">
                                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                            stroke-width="2">
                                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                                            <path d="M9 9h6v6H9z" />
                                        </svg>
                                        Batch Lookup
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navBarPrivacyDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="2">
                                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2" />
                                    <path d="M7 11V7a5 5 0 0 1 10 0v4" />
                                </svg>
                                Privacy
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" id="navBarPrivacyPolicy" asp-area="" asp-controller="Home"
                                        asp-action="Privacy">
                                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                            stroke-width="2">
                                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                                            <polyline points="14,2 14,8 20,8" />
                                            <line x1="16" y1="13" x2="8" y2="13" />
                                            <line x1="16" y1="17" x2="8" y2="17" />
                                            <polyline points="10,9 9,9 8,9" />
                                        </svg>
                                        Privacy Policy
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" id="navBarPrivacyRemoveMyData" asp-area=""
                                        asp-controller="Home" asp-action="RemoveData">
                                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                            stroke-width="2">
                                            <polyline points="3,6 5,6 21,6" />
                                            <path
                                                d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
                                            <line x1="10" y1="11" x2="10" y2="17" />
                                            <line x1="14" y1="11" x2="14" y2="17" />
                                        </svg>
                                        Remove My Data
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>

                    <!-- Theme toggle -->
                    <button class="theme-toggle" data-tooltip="Toggle theme" aria-label="Toggle dark/light theme">
                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path
                                d="M21.64 13a1 1 0 00-1.05-.68 8.5 8.5 0 01-6.33-6.33 1 1 0 00-1.73-.64 9 9 0 109.71 9.05 1 1 0 00-.6-1.4z" />
                        </svg>
                    </button>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content -->
    <main class="main-content">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <div class="footer-brand">
                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                            <circle cx="12" cy="10" r="3" />
                        </svg>
                        <span>GeoLocation</span>
                    </div>
                    <p class="footer-description">
                        Precise geographic location services powered by MaxMind technology.
                    </p>
                </div>

                <div class="footer-section">
                    <h6>Services</h6>
                    <ul class="footer-links">
                        <li><a asp-area="" asp-controller="Home" asp-action="LookupAddress">IP Lookup</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="BatchLookup">Batch Processing</a></li>
                    </ul>
                </div>

                <div class="footer-section">
                    <h6>Legal</h6>
                    <ul class="footer-links">
                        <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="RemoveData">Data Removal</a></li>
                    </ul>
                </div>

                <div class="footer-section">
                    <h6>Technology</h6>
                    <ul class="footer-links">
                        <li><a href="https://www.maxmind.com/" target="_blank" rel="noopener">MaxMind</a></li>
                        <li><a href="https://github.com/frasermolyneux" target="_blank" rel="noopener">GitHub</a></li>
                    </ul>
                </div>
            </div>

            <div class="footer-bottom">
                <p>&copy; @DateTime.UtcNow.Year Fraser Molyneux. All rights reserved.</p>
                <p class="footer-attribution">
                    Location data provided by <a href="https://www.maxmind.com/" target="_blank"
                        rel="noopener">MaxMind</a>
                </p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", false)
</body>

</html>

