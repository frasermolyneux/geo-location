@{
    ViewData["Title"] = "Privacy Policy";
}

<!-- Page Header -->
<div class="hero-section fade-in">
    <h1 class="display-4 mb-3">
        <svg class="icon icon-xl me-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2" />
            <path d="M7 11V7a5 5 0 0 1 10 0v4" />
        </svg>
        Privacy Policy
    </h1>
    <p class="lead">Your privacy and data protection are important to us</p>
    <div class="mt-3">
        <span class="badge bg-primary">Last updated: March 24, 2020</span>
    </div>
</div>

<!-- Privacy Content -->
<div class="card fade-in">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-8 mx-auto">

                <section class="mb-5">
                    <h2 class="d-flex align-items-center gap-2 mb-3">
                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                            <polyline points="14,2 14,8 20,8" />
                            <line x1="16" y1="13" x2="8" y2="13" />
                            <line x1="16" y1="17" x2="8" y2="17" />
                            <polyline points="10,9 9,9 8,9" />
                        </svg>
                        Information that is gathered from visitors
                    </h2>

                    <div class="ps-4">
                        <p class="mb-3">In common with other websites, we collect certain information to provide and
                            improve our services:</p>

                        <ul class="list-unstyled">
                            <li class="mb-2 d-flex align-items-start gap-2">
                                <svg class="icon icon-sm mt-1 text-primary" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="2">
                                    <polyline points="20,6 9,17 4,12" />
                                </svg>
                                <span><strong>Log Files:</strong> IP address, browser type, referring page, and time of
                                    visit</span>
                            </li>
                            <li class="mb-2 d-flex align-items-start gap-2">
                                <svg class="icon icon-sm mt-1 text-primary" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="2">
                                    <polyline points="20,6 9,17 4,12" />
                                </svg>
                                <span><strong>Cookies:</strong> Used to remember visitor preferences when interacting
                                    with the website</span>
                            </li>
                            <li class="mb-2 d-flex align-items-start gap-2">
                                <svg class="icon icon-sm mt-1 text-primary" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="2">
                                    <polyline points="20,6 9,17 4,12" />
                                </svg>
                                <span><strong>Registration Data:</strong> Email and username when registration is
                                    required</span>
                            </li>
                            <li class="mb-2 d-flex align-items-start gap-2">
                                <svg class="icon icon-sm mt-1 text-primary" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="2">
                                    <polyline points="20,6 9,17 4,12" />
                                </svg>
                                <span><strong>Geographic Data:</strong> IP addresses, coordinates, city, country, and
                                    other location information for GeoLocation services</span>
                            </li>
                        </ul>
                    </div>
                </section>

                <section class="mb-5">
                    <h2 class="d-flex align-items-center gap-2 mb-3">
                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path
                                d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                        </svg>
                        How the Information is used
                    </h2>

                    <div class="ps-4">
                        <p class="mb-3">We use the collected information to:</p>

                        <ul class="list-unstyled">
                            <li class="mb-2 d-flex align-items-start gap-2">
                                <svg class="icon icon-sm mt-1 text-success" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="2">
                                    <path
                                        d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                                </svg>
                                <span>Enhance your experience with personalized content</span>
                            </li>
                            <li class="mb-2 d-flex align-items-start gap-2">
                                <svg class="icon icon-sm mt-1 text-success" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="2">
                                    <path
                                        d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                                </svg>
                                <span>Provide accurate geo-location lookup services</span>
                            </li>
                            <li class="mb-2 d-flex align-items-start gap-2">
                                <svg class="icon icon-sm mt-1 text-success" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="2">
                                    <path
                                        d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                                </svg>
                                <span>Send service updates and offers (with your consent)</span>
                            </li>
                        </ul>

                        <div class="alert alert-info mt-3" role="alert">
                            <svg class="icon icon-sm me-2" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2">
                                <circle cx="12" cy="12" r="10" />
                                <path d="M12 16v-4" />
                                <path d="M12 8h.01" />
                            </svg>
                            <strong>Important:</strong> Email addresses will never be sold, rented, or leased to third
                            parties.
                        </div>
                    </div>
                </section>

                <section class="mb-5">
                    <h2 class="d-flex align-items-center gap-2 mb-3">
                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="3" />
                            <path
                                d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z" />
                        </svg>
                        Cookies
                    </h2>

                    <div class="ps-4">
                        <p class="mb-3">Cookies are small digital files stored by your web browser that help us:</p>

                        <ul class="list-unstyled">
                            <li class="mb-2 d-flex align-items-start gap-2">
                                <svg class="icon icon-sm mt-1 text-warning" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="10" />
                                    <path d="M12 6v6l4 2" />
                                </svg>
                                <span>Record your preferences when visiting the website</span>
                            </li>
                            <li class="mb-2 d-flex align-items-start gap-2">
                                <svg class="icon icon-sm mt-1 text-warning" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="10" />
                                    <path d="M12 6v6l4 2" />
                                </svg>
                                <span>Track return visits to improve our services</span>
                            </li>
                            <li class="mb-2 d-flex align-items-start gap-2">
                                <svg class="icon icon-sm mt-1 text-warning" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="10" />
                                    <path d="M12 6v6l4 2" />
                                </svg>
                                <span>Third-party advertising companies may also use cookies for tracking
                                    purposes</span>
                            </li>
                        </ul>
                    </div>
                </section>

                <section class="mb-5">
                    <h2 class="d-flex align-items-center gap-2 mb-3">
                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10" />
                            <polygon points="10,8 16,12 10,16 10,8" />
                        </svg>
                        Google Ads
                    </h2>

                    <div class="ps-4">
                        <p class="mb-3">Our website uses Google advertising services:</p>

                        <ul class="list-unstyled">
                            <li class="mb-2 d-flex align-items-start gap-2">
                                <svg class="icon icon-sm mt-1 text-info" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="10" />
                                    <path d="M12 16v-4" />
                                    <path d="M12 8h.01" />
                                </svg>
                                <span>Google, as a third-party vendor, uses cookies to serve ads</span>
                            </li>
                            <li class="mb-2 d-flex align-items-start gap-2">
                                <svg class="icon icon-sm mt-1 text-info" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="10" />
                                    <path d="M12 16v-4" />
                                    <path d="M12 8h.01" />
                                </svg>
                                <span>Google's DART cookie enables personalized ads based on your browsing
                                    history</span>
                            </li>
                            <li class="mb-2 d-flex align-items-start gap-2">
                                <svg class="icon icon-sm mt-1 text-info" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="10" />
                                    <path d="M12 16v-4" />
                                    <path d="M12 8h.01" />
                                </svg>
                                <span>You may opt out by visiting the Google ad and content network privacy
                                    policy</span>
                            </li>
                        </ul>

                        <div class="mt-3">
                            <a href="https://www.google.com/policies/technologies/ads/" target="_blank" rel="noopener"
                                class="btn btn-outline">
                                <svg class="icon icon-sm me-1" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="2">
                                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                                    <polyline points="15,3 21,3 21,9" />
                                    <line x1="10" y1="14" x2="21" y2="3" />
                                </svg>
                                Google Privacy Policy
                            </a>
                        </div>
                    </div>
                </section>

                <!-- Contact Section -->
                <section class="mt-5 p-4 bg-secondary rounded">
                    <h3 class="d-flex align-items-center gap-2 mb-3">
                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                            <polyline points="22,6 12,13 2,6" />
                        </svg>
                        Questions or Concerns?
                    </h3>
                    <p class="mb-3">If you have any questions about this privacy policy or our data practices, please
                        don't hesitate to reach out.</p>
                    <a asp-area="" asp-controller="Home" asp-action="RemoveData" class="btn btn-primary">
                        <svg class="icon icon-sm me-1" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2">
                            <polyline points="3,6 5,6 21,6" />
                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
                            <line x1="10" y1="11" x2="10" y2="17" />
                            <line x1="14" y1="11" x2="14" y2="17" />
                        </svg>
                        Request Data Removal
                    </a>
                </section>

            </div>
        </div>
    </div>
</div>