{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/MX.GeoLocation.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-api",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/MX.GeoLocation.Api.V1/MX.GeoLocation.Api.V1.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-web",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/MX.GeoLocation.Web/MX.GeoLocation.Web.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/MX.GeoLocation.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/MX.GeoLocation.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-unit",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/src/MX.GeoLocation.sln",
                "--filter",
                "FullyQualifiedName!~IntegrationTests"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-integration-api",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/src/MX.GeoLocation.Api.IntegrationTests/MX.GeoLocation.Api.IntegrationTests.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-integration-client",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/src/MX.GeoLocation.Api.Client.IntegrationTests/MX.GeoLocation.Api.Client.IntegrationTests.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-integration-web",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/src/MX.GeoLocation.Web.IntegrationTests/MX.GeoLocation.Web.IntegrationTests.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-all",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/src/MX.GeoLocation.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "playwright-install",
            "command": "pwsh",
            "type": "process",
            "args": [
                "${workspaceFolder}/src/MX.GeoLocation.Web.IntegrationTests/bin/Debug/net9.0/playwright.ps1",
                "install",
                "chromium"
            ],
            "problemMatcher": []
        }
    ]
}